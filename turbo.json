{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "env": [
        "NEXT_PUBLIC_APP_NAME",
        "NEXT_PUBLIC_MINDOS_DISPLAY_NAME",
        "NEXT_PUBLIC_MINDOS_IDENTITY_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "RESTATE_INGRESS_URL",
        "RESTATE_API_KEY",
        "BASIC_AUTH_USER",
        "BASIC_AUTH_PASSWORD",
        "MINDOS_DEFAULT_IDENTITY_NAME",
        "MINDOS_POLL_INTERVAL_MS",
        "MINDOS_STREAM_TIMEOUT_MS"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
