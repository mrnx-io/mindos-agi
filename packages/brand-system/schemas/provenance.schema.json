{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Provenance metadata schema for generated outputs",
  "type": "object",
  "additionalProperties": false,
  "required": ["seed_hash", "registry_hashes", "compiler_version", "compiler_spec_id", "generated_at"],
  "properties": {
    "seed_hash": { "type": "string", "minLength": 64 },
    "registry_hashes": {
      "type": "object",
      "additionalProperties": { "type": "string", "minLength": 64 }
    },
    "compiler_version": { "type": "string", "minLength": 1 },
    "compiler_spec_id": { "type": "string", "minLength": 1 },
    "generated_at": { "type": "string", "minLength": 1 },
    "source_sections": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "./_defs.json#/definitions/section_ref" }
    }
  }
}
