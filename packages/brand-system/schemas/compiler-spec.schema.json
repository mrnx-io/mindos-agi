{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Schema for compiler spec registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "version", "inputs", "outputs", "pipeline", "compiler_version"],
  "properties": {
    "$schema": { "type": "string" },
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "inputs": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "outputs": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "pipeline": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "compiler_version": { "type": "string", "minLength": 1 }
  }
}
